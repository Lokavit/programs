/* 交易列表 */
.order_list_item {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  padding: 0.3rem;
  border-bottom: 1px solid #ccc;
}

.order_list_item image {
  width: 1rem;
  height: 1rem;
  margin: 0.1rem 0;
}

.order_list_item_info {
  flex: 1;
  padding: 0 0.2rem;
}

.order_list_item_info label {
  display: block;
}

.order_list_item_info text {
  display: block;
  font-size: 0.25rem;
  color: #828282;
}